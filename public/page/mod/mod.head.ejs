<%
var user = G.req.session.user;

%>
<style>
    .g-usr{height: 36px;background: #f5f5f5;border-bottom: #eee 1px solid;}
    .g-usr-in{height:100%;line-height: 36px;}
    .g-tp{height: 100%;}
    .g-tp li{float: left;height: 100%;}
    a.g-tp-a{display: block;height: 18px;line-height: 18px;margin-top: 10px;padding: 0 15px;border-left: #ccc dotted 1px;}
    a.g-tp-a:hover{text-decoration: none;}
    a.f{border: 0;}
    .g-tp-f{float: left;}
    .g-tp-usr{float: right;}

    .usr-tp{position: relative;margin-left: 6px;}
    a.usr-link{display:block;height: 100%!important;line-height: 38px!important;margin: 0!important;}
    a.usr-link:hover{text-decoration: none;}
    a.usr-link img{width: 30px;height: 30px;border-radius: 15px;vertical-align: middle;margin-right: 4px;}
    .usr-nav-wp{height: 100px;width: 110px;background: #fff;}
    .usr-nav-wp li{width:100%;height: 30px;line-height: 30px;margin-bottom: 5px;}
    .usr-nav-wp li.line{height: 1px;line-height: 1px;margin-bottom: 4px;background: #ddd;}

    a.usr-nav:link, a.usr-nav:active{display: block;border-radius: 2px;padding-left: 8px;}
    a.usr-nav:hover{text-decoration: none;background: #369;color: #fff;}
    a.usr-nav:hover i.ico{color: #fff;}

    .g-hd{height: 70px;}
    .g-hd-fix{margin-bottom: 40px;}
    .g-hd-in{height: 100%;position: relative;}
</style>
<div class="g-usr">
    <div class="g-usr-in g-wp">
        <div class="g-tp-f">
            的飞地税
        </div>
        <ul class="g-tp g-tp-usr">
            <% if(user){ %>
                <li class="usr-tp j-pop" opt='{"trigger": "hover", "pos":"right"}'>
                    <a class="f usr-link" href="/user/<%= user._id %>">
                        <img src="<%= user.avatarUrl %>!50x50"/>
                        <%= user.nick_name %>
                        <i class="ico ico-angle-down ico-r"></i>
                    </a>
                    <div class="u-pop-child usr-nav-wp j-pop-box" style="height: 66px;">
                        <ul>
                            <li><a href="/user/<%= user._id %>/profile" class="usr-nav"><i class="ico ico-config ico-c-grey"></i>个人设置</a></li>
                            <li><a href="/logout" rel="nofollow" class="usr-nav">退出</a></li>
                        </ul>
                    </div>
                </li>
                <li>
                    <a class="g-tp-a" href="/pay" target="_blank"><%= user.rmb %></a>
                </li>
            <% }else{ %>
                <li><a href="javascript://" class="g-tp-a j-wbLogin f"><i class="ico ico-wb"></i>微博登录</a></li>
                <li><a href="javascript://" class="g-tp-a j-qqLogin"><i class="ico ico-qq"></i>QQ登录</a></li>
                <li><a class="g-tp-a" href="/login" rel="nofollow">登录</a></li>
                <li><a class="g-tp-a" href="/reg" rel="nofollow">注册</a></li>

            <% } %>
        </ul>
    </div>
</div>

<div class="g-hd" id="G_hd">

    <div class="g-hd-in g-wp">
        <div class="g-logo">
            <a href="<%= G.linkUrl %>"><img src="/src/img/logo.png?_=20140920" alt=""/></a>
        </div>
    </div>
</div>
<%
var catId = locals.categoryId || "";
var t = G.url.parse(G.req.url).pathname.split('/');
var d = t[t.length - 1]

%>
<div class="g-nav" id="G_nav">
    <div class="g-wp">
        <div class="m-cate">
            <div class="m-cate-hd"><h2>商品分类</h2></div>
        </div>
        <ul class="m-nav">
            <li class="h"><a class="nav <%= catId == "home" ? 'now' : ''%>" href="<%= G.linkUrl %>">首页</a></li>
            <li class="h"><i>|</i><a class="nav <%= catId == "home" ? 'now' : ''%>" href="<%= G.linkUrl %>/new">最新揭晓</a></li>
            <li class="h"><i>|</i><a class="nav <%= catId == "home" ? 'now' : ''%>" href="<%= G.linkUrl %>/progress">最新上架</a></li>
            <li class="h"><i>|</i><a class="nav <%= catId == "home" ? 'now' : ''%>" href="<%= G.linkUrl %>/share">晒单分享</a></li>
        </ul>
    </div>
</div>