<!DOCTYPE html>
<html>
<head>
    <% include ./inc/inc.head.ejs %>
    <style>
        .m-index{position: relative;}
        .m-index-hd{}
        .m-index-bd{}
        .m-list{}
        .m-list li.entry{float:left;margin-left: -1px;margin-top: -1px;overflow: hidden;border: 1px solid #e8e8e8;background: #fff;position: relative;}
        .m-list-in{margin: 20px 19px 15px 20px;height: 329px;width: 200px;}
        .m-list-name{margin-bottom: 5px;width: 100%;}
        .m-list-price{margin-bottom: 5px;color: #999;}
        .m-list-btn{margin-top: 12px;text-align: center;}
    </style>
</head>
<body>
<% include ./mod/mod.head.ejs %>
<div class="g-bd g-wp">
    <div class="m-index">
        <div class="m-index-hd">

        </div>
        <div class="m-index-bd">
            <ul class="m-list">
                <% _.each(list, function(o){ %>
                    <li class="entry j-entry">
                        <div class="m-list-in">
                            <div class="m-list-img"><a href="/baby/<%= o._id %>" target="_blank" title="<%= o.name %>"><img width="200" height="150" src="<%= o.cover[0] %>" /></a></div>
                            <div class="m-list-name f-toe"><a href="/baby/<%= o._id %>" target="_blank" title="<%= o.name %>"><%= o.name %></a></div>
                            <div class="m-list-price">总需：<%= o.price %></div>
                            <div class="m-list-progress j-progress">
                                <div class="u-pg">
                                    <div class="u-pg-bar" style="width: <%= (o.price_now / o.price).toFixed(4) * 100 %>%"></div>
                                </div>
                                <ul class="u-pg-txt">
                                    <li class="f-fl">
                                        <p><b><%= o.price_now %></b></p>
                                        <p>已参与人数</p>
                                    </li>
                                    <li class="f-fr f-tar">
                                        <p><b><%= o.price_need %></b></p>
                                        <p>剩余人数</p>
                                    </li>
                                </ul>
                            </div>
                            <div class="m-list-btn"><button class="u-btn u-b-red j-luck" data-id="<%= o._id %>" data-num="1">link</button></div>
                        </div>
                    </li>
                <% }) %>
            </ul>
        </div>
    </div>

</div>
<% include ./mod/mod.foot.ejs %>
<% include ./inc/inc.foot.ejs %>
</body>
</html>