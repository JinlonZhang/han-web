

<div class="us-info-w">

    <div class="us-avatar">
        <img class="img" src="<%= user.avatar_url %>!180x180"/>
        <% if(isSelf){ %>
            <a href="<%= G.linkUrl %>/user/<%= user._id %>/avatar" class="a-ava u-btn u-b-white u-b-mini">修改头像</a>
        <% } %>
    </div>
    <div class="us-info">
        <h1><%= user.nick_name %></h1>
        <p>ID: <%= user._id %></p>
    </div>
</div>

<%
var t = G.url.parse(G.req.url).pathname.split('/'), cls = 'us-mu-n';
var d = t[t.length - 1];

function getCls(s){
    return s == d ? cls : '';
}
%>
<div class="us-nav">
    <ul>
        <li class="f"><a class="us-mu <%= getCls('luck') %>" href="/user/<%= user._id %>/luck">夺宝记录</a></li>
        <li class="f"><a class="us-mu <%= getCls('win') %>" href="/user/<%= user._id %>/win">中奖记录</a></li>
        <li class="f"><a class="us-mu <%= getCls('recharge') %>" href="/user/<%= user._id %>/recharge">充值记录</a></li>

    </ul>
</div>